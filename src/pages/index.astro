---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import { bakeriesData } from "../data/data";

const title = "Piekarnie rzemie≈õlnicze";
---

<Layout title={title}>
  <main class="container">
    <h1>{title}</h1>

    <div class="cards-list">
      {
        bakeriesData.map(
          ({ name, links: { facebook, instagram, website } }) => (
            <Card title={name} links={{ instagram, facebook, website }} />
          )
        )
      }
    </div>
  </main>
</Layout>

<style>
  .cards-list {
    gap: 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    grid-template-rows: repeat(auto-fit, , 1fr);
    margin-bottom: 2.5rem;
  }
</style>
